#
# Makefile for "qg"
#

PROGRAM		= @QPHOME@/bin/qg

SOURCES		= qg.ql

BASES		= $(basename $(SOURCES))
OBJECTS		= $(addsuffix .qo,$(BASES))
ASMS =        $(addsuffix .qs,$(BASES))

.PHONY:	all
all: $(PROGRAM)

$(PROGRAM): $(OBJECTS)
	$(COMPILE.qc) -L -o $(PROGRAM) $(OBJECTS)


%.qo: %.qs
	$(COMPILE.qc) -c -o $@ $<

