#
# Makefile for "qp"
#
PROGRAM		= @QPHOME@/bin/qp

SOURCES		= qp.ql

BASES		= $(basename $(SOURCES))
OBJECTS		= $(addsuffix .qo,$(BASES))
ASMS =        $(addsuffix .qs,$(BASES))

.PHONY:	all
all: $(PROGRAM)

$(PROGRAM): $(OBJECTS)
	$(COMPILE.qc) -o $(PROGRAM) $(OBJECTS)


%.qo: %.qs
	$(COMPILE.qc) -c -o $@ $<

